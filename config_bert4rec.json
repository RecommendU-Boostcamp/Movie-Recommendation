{
    "name": "Bert4Rec",
    "n_gpu": 1,

    "arch": {
        "type": "BERT4Rec",
        "args": {
            "input_dims": 5,
            "embedding_dim": 128,
            "mlp_dims": [128, 128, 64]
        }
    },
    "n_fold": 5,
    "data_loader": {
        "type": "FMDataLoader",
        "args":{
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 3e-4,
            "weight_decay": 1e-5,
            "amsgrad": true
        }
    },
    "loss": "ce_loss",
    "metrics": [
        "recallk"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 1,
        
        "monitor": "max recall",
        "early_stop": 3

    }
}
